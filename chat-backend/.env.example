# AI Provider Configuration (Groq/OpenAI)
# Primary: Groq API Key (get from https://console.groq.com/)
GROQ_API_KEY=your_groq_api_key_here

# Fallback: OpenAI API Key (for backward compatibility)
# OPENAI_API_KEY=your_openai_api_key_here

# AI API Configuration
# Base URL for AI API (defaults to Groq)
AI_API_BASE_URL=https://api.groq.com/openai/v1

# AI Model to use (defaults to Groq's recommended model)
# Groq models: llama-3.3-70b-versatile, llama-3.1-70b-versatile, mixtral-8x7b-32768
# OpenAI models: gpt-4, gpt-3.5-turbo
AI_MODEL=llama-3.3-70b-versatile

# Server Configuration
PORT=3001

# Sift-rs API Configuration  
SIFT_API_URL=http://localhost:3000

# Logging
RUST_LOG=info
